<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/repo_simple_text_padding">

            <ImageView
                android:layout_width="@dimen/repo_avatar_size"
                android:layout_height="@dimen/repo_avatar_size"
                android:id="@+id/owner_avatar_image_view"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_face_black_48dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/repo_name"
                android:textStyle="bold"
                android:layout_toEndOf="@id/owner_avatar_image_view"/>

            <TextView
                android:id="@+id/owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/repo_name"
                android:layout_toEndOf="@id/owner_avatar_image_view" />
        </RelativeLayout>
</android.support.v7.widget.CardView>
